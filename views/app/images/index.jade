extends  ../../layout.jade
block contenido
    div(class="container")
        h1 My Pictures
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2
                        a(href="/app/images/#{imagen._id}/edit", class="right-space") Edit
                        form(action="/app/images/#{imagen._id}?_method=DELETE", class="link", method="POST")
                            input(type="submit", value="delete")



